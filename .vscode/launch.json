  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'grrs'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib",
          "--package=grrs"
        ],
        "filter": {
          "name": "grrs",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'grrs'",
      "cargo": {
        "args": [
          "build",
          "--bin=grrs",
          "--package=grrs"
        ],
        "filter": {
          "name": "grrs",
          "kind": "bin"
        }
      },
      "args": [
        "--",
        "hello",
        "test_target"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Recursive output",
      "cargo": {
        "args": [
          "build",
          "--bin=grrs",
          "--package=grrs"
        ],
        "filter": {
          "name": "grrs",
          "kind": "bin"
        }
      },
      "args": [
        "--",
        "-r",
        "-o",
        "output.txt",
        "hello",
        "test_target"
      ],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'grrs'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=grrs",
          "--package=grrs"
        ],
        "filter": {
          "name": "grrs",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}